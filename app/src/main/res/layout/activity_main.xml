<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/eletric_car"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_Carros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Title"
        android:layout_margin="16dp"
        android:text="@string/carros"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_Fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Title"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/text_Carros"
        android:text="@string/favoritos"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_car"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/text_Carros"
        android:layout_marginTop="16dp"
        android:src="@drawable/car" />

    <TextView
        android:id="@+id/text_preco"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_car"
        android:layout_marginStart="16dp"
        android:text="Preço" />

    <TextView
        android:id="@+id/text_preco_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_car"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/text_preco"
        android:text="R$ 300.000,00" />

    <TextView
        android:id="@+id/text_bateria"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_preco"
        android:layout_marginStart="16dp"
        android:text="Bateria" />

    <TextView
        android:id="@+id/text_bateria_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_preco_value"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/text_bateria"
        android:text="R$ 300 kWh" />

    <TextView
        android:id="@+id/text_potencia"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_bateria"
        android:layout_marginStart="16dp"
        android:text="Potência" />

    <TextView
        android:id="@+id/text_potencia_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_bateria_value"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/text_potencia"
        android:text="300 cv" />

    <TextView
        android:id="@+id/text_recarga"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_potencia"
        android:layout_marginStart="16dp"
        android:text="Recarga" />

    <TextView
        android:id="@+id/text_recarga_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_potencia_value"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/text_recarga"
        android:text="23 min" />

    <EditText
        android:id="@+id/edit_preco_Kwh"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Preço Kwh"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:maxLines="2"
        android:layout_below="@+id/text_recarga"/>
    <EditText
        android:id="@+id/edit_km_percorrido"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="Km Percorrido"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:maxLines="2"
        android:layout_below="@+id/edit_preco_Kwh"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        android:text="calcular"
        android:id="@+id/btn_calcular"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/edit_km_percorrido"
        android:layout_toEndOf="@+id/edit_km_percorrido"
        android:layout_alignStart="@+id/edit_km_percorrido"/>
    <TextView
        android:id="@+id/text_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_calcular"
        />

</RelativeLayout>